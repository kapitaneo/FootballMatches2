@model IEnumerable<FootballMatches.Models.LeagueMatchesViewModel>

@{
    ViewData["Title"] = "Football Matches";
}

@{
    var matchType = ViewData["MatchType"]?.ToString() ?? "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="description" content="Track recent and upcoming football matches from popular leagues.">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/styles.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap">
</head>
<body>
    <div class="app-container">
        <header class="header-container">
            <h3>NATIVE STATS</h3>
            <div class="buttons">
                <button class="register-button">Register</button>
                <button class="login-button">Login</button>
            </div>
        </header>

        <div class="switcher-container">
            <button class="switch-button @(matchType == FootballMatches.Common.MatchTypes.SCHEDULED.ToString() ? "active" : "")" onclick="location.href='@Url.Action("GetMatches", new { type = "SCHEDULED" })'">Upcoming Matches</button>
            <button class="switch-button @(matchType == FootballMatches.Common.MatchTypes.FINISHED.ToString() ? "active" : "")" onclick="location.href='@Url.Action("GetMatches", new { type =  "FINISHED"})'">Recent Matches</button>
        </div>

        <div id="loading" style="display: none;">Loading matches...</div>

        <div id="leagues-container">
            @if (Model != null && Model.Any())
            {
                foreach (var league in Model)
                {
                    <h2 class="league-title">@league.CompetitionName</h2>
                    <div class="carousel">
                        @foreach (var match in league.Matches)
                        {
                            <div class="match-card">
                                <h3>@match.HomeTeam.Name vs @match.AwayTeam.Name</h3>
                                <p>Date: @match.UtcDate.ToString("yyyy-MM-dd HH:mm")</p>
                            </div>
                        }
                    </div>
                }
            }
        </div>
    </div>
</body>
</html>
